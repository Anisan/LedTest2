<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/red" android:id="@+id/textView"/>
    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar" android:layout_below="@+id/textView" android:layout_alignLeft="@+id/button"
            android:layout_alignParentRight="true" android:max="255"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/green" android:id="@+id/textView2" android:layout_below="@+id/seekBar"
              android:layout_alignLeft="@+id/seekBar"/>
    <SeekBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/seekBar2"
             android:layout_below="@+id/textView2" android:layout_alignLeft="@+id/textView2"
             android:layout_alignRight="@+id/seekBar" android:max="255"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/blue" android:id="@+id/textView3" android:layout_below="@+id/seekBar2"
              android:layout_alignLeft="@+id/seekBar2"/>
    <SeekBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/seekBar3"
             android:layout_below="@+id/textView3" android:layout_alignLeft="@+id/textView3"
             android:layout_alignRight="@+id/seekBar2" android:max="255" android:progress="0"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/off"
            android:id="@+id/button"
            android:layout_below="@+id/seekBar3" android:layout_alignLeft="@+id/textView"
            android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_below="@+id/button" android:layout_alignLeft="@+id/button"
            android:singleLine="true"/>

</RelativeLayout>
